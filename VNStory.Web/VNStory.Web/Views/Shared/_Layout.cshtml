<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASP.NET Application</title>
    @Styles.Render("~/Resources/css")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-md py-3 mb-4 border-bottom">
            @Html.ActionLink("VN Story", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="collapseNavbar">
                <ul class="navbar-nav me-auto">
                    @Html.Partial("_ListPartial")
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">&middot;</a>
                    </li>
                    @Html.Partial("_CategoryPartial")
                </ul>
                @Html.Partial("_SearchPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/Resources/script")
    @RenderSection("scripts", required: false)
</body>
</html>
