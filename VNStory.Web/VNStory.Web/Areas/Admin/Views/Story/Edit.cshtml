@model VNStory.Web.Models.Story
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("Edit", "Story", FormMethod.Post, new { role = "form", @class = "row" }))
    {
        @Html.AntiForgeryToken()

        <h4>Chỉnh sửa truyện</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)
        <div class="mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control", placeholder = "Tên truyện", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Status, ViewBag.ListTrangThai as SelectList, htmlAttributes: new { @class = "form-select" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Image, htmlAttributes: new { type = "file", @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", rows = "6" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.Views, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Views, htmlAttributes: new { @class = "form-control", placeholder = "Lượt xem", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Views, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.Source, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Source, htmlAttributes: new { @class = "form-control", placeholder = "Nguồn truyện", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
            @Html.ActionLink("Trở lại", "Index", "Story", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    }

</div>
