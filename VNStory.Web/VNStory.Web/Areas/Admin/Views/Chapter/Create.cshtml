@model  Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("Create", "Roles", FormMethod.Post, new { role = "form", @class = "row" }))
    {
        @Html.AntiForgeryToken()

        <h4>Thêm nhóm người dùng</h4>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên nhóm người dùng", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <input type="submit" value="Tạo nhóm" class="btn btn-primary" />
            @Html.ActionLink("Trở lại", "Index", "Roles", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    }
</div>