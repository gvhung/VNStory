@model IEnumerable<VNStory.Web.Models.Chapter>
@{
    ViewBag.Title = "Chapter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h2>Nhóm người dùng</h2>

    <div class="row py-1">
        <div class="col-md-9 me-auto">
            <h4 class="card-title">Danh sách nhóm người dùng</h4>
        </div>
        <div class="col-md-3 text-end">
            @Html.ActionLink("Thêm mới", "Create", "Chapter", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="row g-5">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th scope="col" class="col-1">
                            #
                        </th>
                        <th scope="col" class="col-auto">
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th scope="col" class="col-1">
                            @Html.DisplayNameFor(model => model.Story)
                        </th>
                        <th scope="col" class="col-1">
                            @Html.DisplayNameFor(model => model.NumberChapter)
                        </th>

                        <th scope="col" class="col-1">
                            @Html.DisplayNameFor(model => model.StoryId)
                        </th>

                        <th scope="col" class="col-1">

                        </th>
                        <th scope="col" class="col-1">

                        </th>
                        <th scope="col" class="col-1">

                        </th>

                    </tr>
                </thead>
                <tbody>

                    @{
                        var _index = 1;

                        foreach (var item in Model)
                        {
                                        <tr>
                                            <td scope="row">
                                                @_index
                                            </td>

                                            <td valign="middle">
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @{
                                                    string statusTitle = "Hãy chọn";

                                                    if (item.Story == 0)
                                                    {
                                                        statusTitle = "Thiếu Nhi";
                                                    }
                                                    else if (item.Story == 1)
                                                    {
                                                        statusTitle = "Mới Lớn";
                                                    }
                                                    else if (item.Story == 2)
                                                    {
                                                        statusTitle = "Tuổi Hồng";
                                                    }
                                                    else if (item.Story == 0)
                                                    {
                                                        statusTitle = "Đọc Tạp";
                                                    }
                                                }
                                                @Html.DisplayName(statusTitle)
                                            </td>
                                            <td valign="middle">
                                                @Html.DisplayFor(modelItem => item.NumberChapter)
                                            </td>
                                            <td valign="middle">
                                                @Html.DisplayFor(modelItem => item.StoryId)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                                            </td>
                                        </tr>
                            { _index++; }
                        }
                    }

                    @if (_index <= 1)
                    {
                        <tr>
                            <td colspan="8">Không có bản ghi nào</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>
