@model  Microsoft.AspNet.Identity.EntityFramework.IdentityRole
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @using (Html.BeginForm("Edit", "Roles", FormMethod.Post, new { role = "form", @class = "row" }))
    {
        @Html.AntiForgeryToken()

        <h4>Chỉnh sửa nhóm người dùng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)

        <div class="mb-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label" })

            @if (Model?.Name == "Administrators" || Model?.Name == "Users")
            {
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            }
            else
            {
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            }
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
            @Html.ActionLink("Trở lại", "Index", "Roles", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    }
</div>
