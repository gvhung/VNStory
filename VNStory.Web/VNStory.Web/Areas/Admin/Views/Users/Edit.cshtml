@model VNStory.Web.Models.ApplicationUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ApplicationUser</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="mb-3">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model?.Email == "gvhung@hotmail.com")
            {
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            }
            else
            {
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            }
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model?.Email == "gvhung@hotmail.com")
            {
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
            }
            else
            {
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            }
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <div class="col-md-offset-2 col-md-10">
            <div class="form-check">
                @Html.CheckBoxFor(m => m.EmailConfirmed, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.EmailConfirmed, new { @class = "form-check-label" })
                @Html.ValidationMessageFor(model => model.EmailConfirmed, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <div class="col-md-offset-2 col-md-10">
            <div class="form-check">
                @Html.CheckBoxFor(m => m.PhoneNumberConfirmed, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.PhoneNumberConfirmed, new { @class = "form-check-label" })
                @Html.ValidationMessageFor(model => model.PhoneNumberConfirmed, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="col-md-offset-2 col-md-10">
            <div class="form-check">
                @Html.CheckBoxFor(m => m.TwoFactorEnabled, new { @class = "form-check-input" })
                @Html.LabelFor(m => m.TwoFactorEnabled, new { @class = "form-check-label" })
                @Html.ValidationMessageFor(model => model.TwoFactorEnabled, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", "Users", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
