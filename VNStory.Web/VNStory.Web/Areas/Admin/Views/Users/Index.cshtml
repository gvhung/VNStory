@model IEnumerable<VNStory.Web.Areas.Admin.Models.UsersViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thành viên</h2>
<br />
<div class="row py-1">
    <div class="col-md-9 me-auto">
        <h4 class="card-title">Danh sách thành viên</h4>
    </div>
    <div class="col-md-3 text-end">
        @Html.ActionLink("Thêm mới", "Create", "Users", routeValues: new { Area = "Admin" }, htmlAttributes: new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row g-5">
    <div class="col-md-12">
        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th scope="col" class="th-sm">
                        #
                    </th>
                    <th scope="col" class="th-sm">
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th scope="col" class="th-sm">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th scope="col" class="th-sm">
                        @Html.DisplayNameFor(model => model.Roles)
                    </th>
                    <th scope="col" class="th-sm">
                        #
                    </th>
                    <th scope="col" class="th-sm">
                        #
                    </th>
                    <th scope="col" class="th-sm">
                        #
                    </th>
                </tr>
            </thead>
            <tbody>

                @{
                    var _index = 1;

                    foreach (var item in Model)
                    {
                        <tr>
                            <td scope="row">
                                @_index
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Roles)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                        { _index++; }
                    }
                }

                @if (_index <= 1)
                {
                    <tr>
                        <td colspan="7">Không có bản ghi nào</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
